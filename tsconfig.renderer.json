{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/renderer",
    "baseUrl": "src/renderer/src",
    "paths": {
      "@/*": ["./*"],
      "@common/*": ["../../common/*"]
    },
    "types": ["vite/client"]
  },
  "include": ["src/renderer/src/**/*.ts", "src/renderer/src/**/*.d.ts", "src/renderer/src/**/*.vue", "src/common/**/*.ts"]
}
