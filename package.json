{
  "name": "aibot",
  "version": "1.0.0",
  "main": "dist/main/main/index.js",
  "description": "AI Desktop Agent with Live2D avatar, multi-model routing, and tool calling",
  "author": "dice",
  "license": "ISC",
  "scripts": {
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:5173 && npm run dev:main\"",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build": "npm run build:renderer && npm run build:main",
    "start": "electron .",
    "dev:electron": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:5173 && tsc -p tsconfig.main.json && cross-env NODE_ENV=development electron .\"",
    "pack": "npm run pack:portable",
    "pack:portable": "npm run build && electron-builder --win portable --x64",
    "pack:installer": "npm run build && electron-builder --win nsis --x64",
    "test": "echo \"No tests yet\""
  },
  "build": {
    "appId": "com.dice.aibot",
    "productName": "AI Bot",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "signAndEditExecutable": false,
      "icon": "build/icon.png",
      "artifactName": "${productName}-${version}-windows-${arch}-portable.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^6.0.4",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^40.3.0",
    "electron-builder": "^26.7.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vue-tsc": "^3.2.4",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "chokidar": "^5.0.0",
    "electron-store": "^11.0.2",
    "element-plus": "^2.13.2",
    "exceljs": "^4.4.0",
    "mammoth": "^1.11.0",
    "pinia": "^3.0.4",
    "sharp": "^0.34.5",
    "uuid": "^13.0.0",
    "vue": "^3.5.28",
    "vue-router": "^5.0.2"
  }
}
