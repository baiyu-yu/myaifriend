{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist/main",
    "baseUrl": ".",
    "paths": {
      "@common/*": ["src/common/*"],
      "@main/*": ["src/main/*"]
    }
  },
  "include": ["src/main/**/*.ts", "src/preload/**/*.ts", "src/common/**/*.ts"]
}
